{
  "displayName": "Homebridge Smartthings AC",
  "name": "homebridge-smartthings-ac-omryoz-fork",
  "version": "2.0.33",
  "description": "Control your Samsung SmartThings AC using Homebridge.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:omryoz/homebridge-smartthings-ac.git"
  },
  "bugs": {
    "url": "https://github.com/omryoz/homebridge-smartthings-ac/issues"
  },
  "engines": {
    "node": "^18.20.4 || ^20.15.1 || ^22",
    "homebridge": "^1.6.0 || ^2.0.0-beta.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rm -rf ./dist && npx tsc -p tsconfig.json",
    "postinstall": "npm run build",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "setup:integration": "ts-node tests/integration/setup-env.ts"
  },
  "keywords": [
    "homebridge-plugin",
    "smartthings",
    "homekit",
    "homebridge",
    "climate",
    "air_conditioning"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^7.21.0",
    "homebridge": "^1.10.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "nock": "^13.3.0",
    "@types/nock": "^11.1.0",
    "dotenv": "^16.0.0"
  },
  "dependencies": {
    "@smartthings/core-sdk": "^1.8.1",
    "@types/node": "^14.14.31",
    "axios": "^1.6.0",
    "typescript": "^4.9.5"
  }
}
