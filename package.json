{
  "displayName": "Homebridge Smartthings AC",
  "name": "homebridge-smartthings-ac-omryoz-fork",
  "version": "2.0.11",
  "description": "Control your Samsung SmartThings AC using Homebridge.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:omryoz/homebridge-smartthings-ac.git"
  },
  "bugs": {
    "url": "https://github.com/omryoz/homebridge-smartthings-ac/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "preinstall.js"
  ],
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rm -rf ./dist && tsc -p tsconfig.json",
    "prepublishOnly": "npm run lint && npm run build",
    "preinstall": "node preinstall.js",
    "postinstall": "npm run build || true"
  },
  "keywords": [
    "homebridge-plugin",
    "smartthings",
    "homekit",
    "homebridge",
    "climate",
    "air_conditioning"
  ],
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "homebridge": "^1.10.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@smartthings/core-sdk": "^1.8.1",
    "axios": "^1.6.0",
    "typescript": "^4.2.2"
  }
}
